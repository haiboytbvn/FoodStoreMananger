@using FoodStoreManager.Presenter.Models
@model UpdateRolesViewModel

@{
    ViewBag.Title = "Edit Your Roles";
}

<h2>Edit</h2>
<p class="text-success">@ViewBag.StatusMessage</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.ID)*@

        <div class="form-group">

            @Html.LabelFor(model => model.UserRoles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>
                    @{Html.RenderAction("ShowCurrentRole");}
                </p>
                
                
                @Html.DropDownListFor(model => model.UserRoles, new SelectList(
                  new List<Object>{
                       new { value = "Admin" , text = "Admin"  },
                       new { value = "Normal" , text = "Normal"  },
                       new { value = "Anonymous" , text = "Anonymous"  },
                    },
                  "value",
                  "text",
                   2),
                   "Choose the role: ")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="command" value="Add" class="btn btn-default" formaction=""/>
                <input type="submit" name="command" value="Remove" class="btn btn-default" formaction="" />
                <hr />
                <input type="submit" name="command" value="Save Change" class="btn btn-default" formaction="" />
            </div>
        </div>
    </div>
}
